<p id="notice"><%= notice %></p>

<h1 class="center">Articoli</h1>

<table>
  <thead>
    <tr>
      <th>Immagine</th>
      <th>Titolo</th>
      <th>Descrizione</th>
      <th>Utente</th>
      <th>Prezzo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= image_tag content.cover.url(:thumb) %></td>
        <td><%= content.titolo %></td>
        <td><%= content.descrizione %></td>
        <td><%= content.user.name if content.user %></td>
        <td><%= content.prezzo %></td>
        <td><%= link_to 'Mostra', content, class: 'btn btn-devise' %></td>
        <% if content.user == current_user%>
          <td><%= link_to 'Modifica', edit_content_path(content), class: 'btn btn-devise' %></td>
          <td><%= button_to 'Elimina', content, method: :delete, :onclick=> "return confirm('Sei sicuro?')", class: 'btn btn-devise'  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to'Aggiungi Articolo', new_content_path, class: 'btn btn-devise' %>
