<%= form_for @content, html: { multipart: true } do |form| %>
  <% if content.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(content.errors.count, "errori") %> hanno impedito all'articolo di essere aggiunto:</h2>

      <ul>
        <% content.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <label class="grey-text">Carica il contenuto digitale che vuoi vendere (formati supportati: PowerPoint, Excel, Word, PDF, Immagini e MP3)</label>
      <br>
    <%= form.file_field :allegato %>
  </div>
  <br><br>
  <div class="field">
    <%= form.label :titolo %>
    <%= form.text_field :titolo %>
  </div>

  <div class="field">
    <%= form.label :descrizione %>
    <%= form.text_area :descrizione, class: "materialize-textarea" %>
 </div>

  <div class="field">
    <%= form.label :prezzo %>
    <%= form.text_field :prezzo %>
  </div>

  <div class="field">
    <label class="grey-text">Carica un'immagine da utilizzare come cover per l'articolo da vendere</label><br>
    <%= form.file_field :cover %>
  </div>
  <br>
  <div  class="actions">
    <%= form.submit 'Salva Articolo', class: 'btn btn-devise' %>
  </div>
<% end %>
